{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Dev (Vite)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "npm: dev"
    },
    {
      "name": "Launch Preview (build)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4173",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "npm: preview"
    }
  ]
}
